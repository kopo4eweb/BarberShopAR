<h2>List clients</h2>

<table class="table">
    <thead>
        <tr>
        <th>#</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Date time</th>
        <th>Barber</th>
        <th>Color</th>
        </tr>
    </thead>
    <tbody>
        <% @clients.each do |item|%>
            <tr>
                <th scope="row"><%= item.id %></th>
                <td><%= item.name %></td>
                <td><%= item.phone %></td>
                <td><%= item.datestamp %></td>
                <td><%= item.barber %></td>
                <td><span style='display: inline-block; vertical-align: text-top; width: 20px; height: 20px; margin-right: 15px; background-color: <%= item.color %>;'></span><%= item.color %></td>
            </tr>
        <% end %>
    </tbody>
</table>